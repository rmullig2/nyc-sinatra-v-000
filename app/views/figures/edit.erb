<html>
  <h1>Edit a Figure</h1>
  <form action="/figures/<%=@figure.id%>" method="POST">
    <label><h3>Figure Name:</h3> </label>
    <input type="hidden" name="figure_id" value="<%=@figure.id%>"/>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br><br>
    <label><h3>Titles:</h3></label>
    <%Title.all.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%="title_#{title.id}"%>"><%=title.name%></input>
    <%end%><br><br>
    <label>and/or, create a new title:</label><br>
    <label><h3>Title name:</h3></label>
    <input type="text" name="title[name]" id="new_title"></input><br>
    <label><h3>Landmarks:</h3></label>
    <%Landmark.all.each do |landmark|%>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%="landmark_#{landmark.id}"%>"><%=landmark.name%></input>
    <%end%><br><br>
    <label>and/or, create a new landmark:</label><br>
    <label><h3>Landmark name:</h3></label>
    <input type="text" name="landmark[name]" id="new_landmark"></input><br><br>
    <input type="submit" value="Edit Figure">
  </form>
</html>
